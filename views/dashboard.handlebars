{{#each posts as |post|}}
  <div class="dish col-md-5">
    <p class="card-header">
      {{post.title}}
      {{format_date post.createdAt}}
    </p>
  </div>
{{/each}}
<form id="new-post-form" class="card-header hidden" action="">
  <h2>New Post</h1>
  <div>
    <h4>Title</h4>
<input  id="title" type="title" />
  </div>
  <div>
    <h4>Description</h4>
<input id="desc" type="description" />
  </div>
  <button id="post-btn">Post</button>
</form>
<footer>
  <button id="create-btn" class="card-header">Create a new post</button>
</footer>

<script src="/js/create.js"></script>